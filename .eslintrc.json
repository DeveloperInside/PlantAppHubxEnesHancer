{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:react/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            2
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "warn",
            "never"
        ],
        "linebreak-style": "off",
        "object-curly-spacing": ["warn", "always"],
        "no-var": "error",
        "padding-line-between-statements": [
          "error",
          {
            "blankLine": "always",
            "prev": "const",
            "next": "return"
          },
          {
            "blankLine": "always",
            "prev": "import",
            "next": "const"
          }
        ]
    }
}
